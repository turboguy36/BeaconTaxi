<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/background_gray_transparent"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_32dp"
    android:paddingLeft="@dimen/padding_32dp"
    android:layout_height="@dimen/size_128dp">

    <ImageView
        android:background="@drawable/circle_background_white"
        android:src="@drawable/avartar_01"
        android:layout_marginRight="@dimen/padding_32dp"
        android:layout_width="@dimen/size_64dp"
        android:layout_gravity="center"
        android:layout_height="@dimen/size_64dp" />
    <TextView
        android:id="@+id/tv_email"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="@string/app_name"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>