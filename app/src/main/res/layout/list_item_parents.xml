<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/layout_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/parent_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:src="@drawable/parent"/>

    <TextView
        android:id="@+id/parent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/parent_photo"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/text_size_large"
        android:text="받는사람 : 어머니"/>

    <TextView
        android:id="@+id/parent_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent_name"
        android:layout_toRightOf="@+id/parent_photo"
        android:textColor="@android:color/background_dark"
        android:textSize="@dimen/text_size_large"
        android:text="연락처 : 010-7890-4567"/>
</RelativeLayout>